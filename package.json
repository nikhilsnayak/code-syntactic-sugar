{
  "name": "code-syntactic-sugar",
  "version": "1.3.0",
  "description": "This is a fork of the [sugar-high](https://github.com/huozhi/sugar-high) package with extra features.",
  "keywords": [
    "syntax-highlighting"
  ],
  "homepage": "https://github.com/nikhilsnayak/code-syntactic-sugar#readme",
  "bugs": {
    "url": "https://github.com/nikhilsnayak/code-syntactic-sugar/issues"
  },
  "author": "Nikhil S <nikhilsnayak3473@gmail.com> (https://www.nikhilsnayak.dev/)",
  "repository": {
    "type": "git",
    "url": "https://github.com/nikhilsnayak/code-syntactic-sugar"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "type": "module",
  "sideEffects": false,
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "dev": "vitest src/__tests__",
    "build": "tsup",
    "check": "biome check src",
    "check:write": "biome check --write src",
    "test": "vitest run src/__tests__",
    "check-exports": "attw --pack .",
    "check-types": "tsc",
    "ci": "pnpm run build  && pnpm run check-exports && pnpm run check-types && pnpm run check && pnpm run test",
    "local-release": "changeset version && changeset publish",
    "prepublishOnly": "pnpm run ci"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.16.1",
    "@biomejs/biome": "1.8.3",
    "@changesets/cli": "^2.27.8",
    "@types/react": "^18.3.5",
    "react": "^18.3.1",
    "tsup": "^8.2.4",
    "typescript": "^5",
    "vitest": "^2"
  },
  "peerDependencies": {
    "react": "^18 || ^19"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@9.10.0"
}
